//Constantes globales 

#define SCREEN_WIDTH 860
#define SCREEN_HEIGHT 640
#define SQUARE_WIDTH 48
#define SQUARE_HEIGHT 48
#define DEFAULT_MUSIC 1
#define MAX_ENEMIES 3

//Structures globales
typedef struct Input
{
	int key[512];
	int mousex,mousey;
	int mousexrel,mouseyrel;
	char mousebuttons[6];
	int quit;
	int mouseMovement;
} Input;

typedef struct Collision
{
	int up;
	int down;
	int left;
	int right;
}Collision;

//Pour tous les objets du jeu, on enregistre l'image + une forme rectangulaire permettant de g√©rer la position en (x,y)
typedef struct Objects
{
	SDL_Window * window;
	SDL_Renderer * renderer;
	SDL_Texture * squareTexture;
	SDL_Texture * mapTexture;
	SDL_Surface *screen;
	SDL_Surface * square;
	SDL_Surface * map;
	SDL_Surface * enemies[MAX_ENEMIES];
	int way[MAX_ENEMIES]; 
	SDL_Rect squarePosition;
	SDL_Rect mapPosition;
	SDL_Rect enemiesPosition[MAX_ENEMIES];
}Objects;

typedef struct Game
{
	int lost;
	int waiting;
	int quit;
}Game;

void gameInitialization(Objects *objects);
void objectsInitialization(Objects *objects);
void updateInput(int *exitGame);
void endGame(Objects *objects);
